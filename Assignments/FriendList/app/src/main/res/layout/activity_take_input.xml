<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_take_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.karan.friendlist.take_input">

    <ImageButton
        android:layout_width="223dp"
        android:layout_height="173dp"
        app:srcCompat="@mipmap/default_profile_picture"
        android:id="@+id/btn_add_image"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_below="@+id/btn_add_image"
        android:layout_alignLeft="@+id/btn_add_image"
        android:layout_alignStart="@+id/btn_add_image"
        android:layout_marginTop="23dp"
        android:id="@+id/et_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="College"
        android:ems="10"
        android:layout_below="@+id/et_name"
        android:layout_alignRight="@+id/et_name"
        android:layout_alignEnd="@+id/et_name"
        android:layout_marginTop="40dp"
        android:id="@+id/et_college" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Age"
        android:ems="10"
        android:layout_below="@+id/et_college"
        android:layout_alignRight="@+id/et_college"
        android:layout_alignEnd="@+id/et_college"
        android:layout_marginTop="48dp"
        android:id="@+id/et_age" />
</RelativeLayout>
